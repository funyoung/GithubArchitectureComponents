<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/circle_message_panel_background"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <!-- 消息头像 -->
    <ImageView
        android:id="@+id/message_avatar"
        android:layout_width="@dimen/circle_message_avatar_size"
        android:layout_height="@dimen/circle_message_avatar_size"
        android:layout_margin="5.3dp"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fitsSystemWindows="true"
        android:scaleType="centerCrop"
        android:src="@drawable/circle_header_avatar" />

    <!-- 消息文本 -->
    <TextView
        android:id="@+id/message_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/white_four"
        android:text="李白发了一条朋友圈"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="18dp"
        app:layout_constraintTop_toTopOf="@id/message_avatar"
        app:layout_constraintBottom_toBottomOf="@id/message_avatar"
        app:layout_constraintStart_toEndOf="@id/message_avatar"
        app:layout_constraintEnd_toEndOf="parent"
        />
</android.support.constraint.ConstraintLayout>